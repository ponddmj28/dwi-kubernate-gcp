docker run -p 3306:3306 --network=dwi-ntw --name mysql -v C:\mysql:/var/lib/mysql -e MYSQL_ROOT_PASSWORD=tosaporn -e MYSQL_DATABASE=IVRDB -e MYSQL_USER=ivrad -e MYSQL_PASSWORD=tosaporn -d mysql:latest
docker run -p 8100:8100 --network=dwi-ntw --name dwi-ws -e DB_HOSTNAME=mysql -e DB_PORT=3306 -e DB_NAME=IVRDB -e DB_USERNAME=ivrad -e DB_PASSWORD=tosaporn -d tosaporn/dwi-backend:0.0.3-SNAPSHOT
docker run -p 8080:8080 --network=dwi-ntw --name dwi-wa -v C:\images\imagesUpload:/temp/images/imagesUpload -e DWI_WS_URL=http://dwi-ws:8100/dwi-ws -e IMAGE_STORE_PATH=/temp/images/imagesUpload -d tosaporn/dwi-frontend:0.0.3-SNAPSHOT
docker run -p 8100:8100 --network=dwi-ntw --name dwi-ws -e DB_HOSTNAME=mysql -e DB_PORT=3306 -e DB_NAME=IVRDB -e DB_USERNAME=ivrad -e DB_PASSWORD=tosaporn -d tosaporn/dwi-batch:0.0.1-SNAPSHOT