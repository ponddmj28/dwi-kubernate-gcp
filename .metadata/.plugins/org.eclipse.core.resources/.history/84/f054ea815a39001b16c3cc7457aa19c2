	@Bean
	public ItemWriter<Object> writer() {
		return new ConsoleItemWriter();
	}

	@Bean
	public ItemProcessor<Integer,Integer> processor() {
		return new InMemItemProcessor();
	}
	
	@Bean
	public ItemReader<Integer> reader() {
		return new InMemReader();
	}

